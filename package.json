{
  "name": "@mojaloop/ping-pong-svc",
  "version": "0.1.0",
  "description": "Typescript Mojaloop project template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/ping-pong-svc.git"
  },
  "keywords": [
    "mojaloop",
    "services",
    "ping-pong-svc"
  ],
  "author": "lewisdaly",
  "contributors": [
    "Lewis Daly <lewis@vesselstech.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Kevin Leyow <kevin.leyow@infitx.com"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/ping-pong-svc/issues"
  },
  "homepage": "https://github.com/mojaloop/ping-pong-svc#readme",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "prepare": "husky || true",
    "prepublishOnly": "npm run build",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc && cp -R config dist && cp ./src/interface/*.yaml ./dist/src/interface/",
    "build:openapi": "npm run build:openapi:dfsp && npm run build:openapi:admin",
    "build:openapi:dfsp": "redocly bundle --output ./src/interface/api.yaml --ext yaml ./src/interface/api-template.yaml",
    "build:openapi:admin": "redocly bundle --output ./src/interface/api-admin.yaml --ext yaml ./src/interface/api-template-admin.yaml",
    "watch": "tsc -w",
    "start": "npm run start:no-build",
    "start:no-build": "node dist/src/cli.js",
    "start:build": "npm run build && npm run start:no-build",
    "start:dev": "ts-node -r tsconfig-paths/register -P ./tsconfig.json src/cli.ts",
    "test": "npm run test:unit",
    "test:unit": "jest --testMatch='**/unit/**/*.test.ts'",
    "test:xunit": "JEST_JUNIT_OUTPUT_DIR=./test/reports/ JEST_JUNIT_OUTPUT_NAME=xunit.xml npm run test:unit -- --reporters=jest-junit",
    "test:coverage": "npm run test:unit -- --coverage --coverageThreshold='{}'",
    "test:coverage-check": "npm run test:unit -- --coverage",
    "test:int": "jest --testMatch='**/test/integration/**/*.test.ts'",
    "test:integration": "./test/scripts/test-integration.sh",
    "test:functional": "./test/scripts/test-functional.sh",
    "warn-pre-commit": "echo \"pre commit tasks running. build and test\"",
    "audit:fix": "npm audit fix",
    "audit:check": "npx audit-ci --config ./audit-ci.jsonc",
    "dep:check": "npx --no-install ncu -e 2",
    "dep:update": "npx --no-install ncu -u",
    "release": "npx standard-version --no-verify --releaseCommitMessageFormat 'ci(release): {{currentTag}} [skip ci]'",
    "snapshot": "npx standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'ci(snapshot): {{currentTag}}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@redocly/cli": "^1.34.2",
    "@types/convict": "^6.1.6",
    "@types/javascript-state-machine": "2.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/redis": "2.8.32",
    "@types/redis-mock": "0.17.3",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "npm-audit-resolver": "3.0.0-RC.0",
    "npm-check-updates": "17.1.18",
    "prettier": "3.5.3",
    "redis-mock": "0.52.0",
    "replace": "^1.2.2",
    "standard-version": "^9.5.0",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  },
  "lint-staged": {
    "./src/*.ts": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "_moduleAliases": {
    "~": "dist/src"
  },
  "dependencies": {
    "@hapi/basic": "7.0.2",
    "@hapi/boom": "10.0.1",
    "@hapi/catbox-memory": "6.0.2",
    "@hapi/good": "9.0.1",
    "@hapi/hapi": "21.4.0",
    "@hapi/inert": "7.1.0",
    "@hapi/vision": "7.0.3",
    "@mojaloop/central-services-error-handling": "^13.0.7",
    "@mojaloop/central-services-logger": "^11.8.1",
    "@mojaloop/central-services-shared": "v18.24.0",
    "@mojaloop/sdk-standard-components": "^19.13.0",
    "blipp": "^4.0.2",
    "convict": "^6.2.4",
    "hapi-swagger": "^17.3.2",
    "javascript-state-machine": "^3.1.0",
    "module-alias": "^2.2.3",
    "redis": "3.1.2"
  }
}
