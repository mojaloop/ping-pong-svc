{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "./dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "lib": ["esNext"],
    "target": "esNext",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test",
    "ambient.d.ts",
    "commitlint.config.js",
    "jest.bdd.config.js",
    "jest.config.js",
    "jest.coverage.config.js",
    "jest.integration.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
